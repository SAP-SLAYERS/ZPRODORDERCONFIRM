<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:m="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:t="sap.ui.table"
    xmlns:f="sap.ui.layout.form"
    controllerName="zproductionorder.controller.View1"
    height="100%"
>
    <m:Page
        id="_IDGenPage1"
        title="Enter Time Ticket for Production Order"
    >
        <m:customHeader>
            <m:Toolbar id="_IDGenToolbar">
                <m:ToolbarSpacer id="_IDGenToolbarSpacer" />
            </m:Toolbar>
        </m:customHeader>

        <m:Panel
            id="_IDGenPanel"
            expandable="false"
            expanded="true"
            headerText="Enter Time Ticket for Production Order"
            width="auto"
            class="sapUiResponsiveMargin compactFormSpacing"
        >
            <m:content>
                <f:SimpleForm
                    id="_IDGenSimpleForm"
                    layout="ResponsiveGridLayout"
                    labelSpanXL="4"
                    labelSpanL="4"
                    labelSpanM="6"
                    labelSpanS="12"
                    adjustLabelSpan="false"
                    emptySpanXL="0"
                    emptySpanL="0"
                    emptySpanM="0"
                    emptySpanS="0"
                    columnsXL="3"
                    columnsL="3"
                    columnsM="2"
                    singleContainerFullSize="false"
                    editable="true"
                >
                    <f:content>
                        <!-- Left Column -->

                        <m:Label
                            id="_IDGenLabel2"
                            text="Order"
                        />
                        <m:Input
                            id="_IDGenInput1"
                            width="200px"
                            value="{formModel>/ManufacturingOrder}"
                            showValueHelp="true"
                            valueHelpRequest=".onProductionOrder"
                            change="onChange"
                        />

                        <m:Label
                            id="_IDGenLabel3"
                            text="Operation"
                        />
                        <m:Input
                            id="_IDGenInput2"
                            width="200px"
                            value="{formModel>/Operation}"
                            editable="false"
                            liveChange="onLiveChange"
                        />

                        <m:Label
                            id="_IDGenLabel5"
                            text="Plant"
                        />
                        <m:Input
                            id="_IDGenInput4"
                            width="200px"
                            value="{formModel>/Plant}"
                            editable="false"
                            liveChange="onLiveChange"
                        />

                        <m:Label
                            id="_IDGenLabel36"
                            text="Shift"
                            class="leftPadding"
                        />
                        <m:ComboBox
                            id="_IDGenComboBox2"
                            width="200px"
                            selectedKey="{formModel>/Shift}"
                        >
                            <m:items>
                                <core:Item
                                    id="_IDGenItem3"
                                    key="1"
                                    text="1 Day"
                                />
                                <core:Item
                                    id="_IDGenItem4"
                                    key="2"
                                    text="2 Night"
                                />
                            </m:items>
                        </m:ComboBox>

                        <m:Label
                            id="_IDGenLabe9"
                            text="PostingDate"
                        />
                        <m:DatePicker
                            id="_IDGenDatePicker10"
                            width="200px"
                            value="{formModel>/PostingDate}"
                            displayFormat="dd.MM.yyyy"
                            valueFormat="yyyy-MM-ddTHH:mm:ss"
                        />
                        <m:Label
                            id="_IDGenLabel12"
                            text="Yield"
                        />
                        <m:Input
                            id="_IDGenInput11"
                            value="{formModel>/YieldQuantity}"
                            type="Number"
                            change="onQtyChange"
                        />

                        <m:Label
                            id="_IDGenLabel14"
                            text="Rework"
                        />
                        <m:Input
                            id="_IDGenInput13"
                            value="{formModel>/ReworkQuantity}"
                            type="Number"
                            change="onQtyChange"
                        />

                        <m:Label
                            id="_IDGenLabel6"
                            text="Saleable Waste"
                        />
                        <m:Input
                            id="_IDGenInput5"
                            value="{formModel>/SaleableWaste}"
                            type="Number"
                            change="saleableQtyChange"
                        />

                        <m:Label
                            id="_IDGenLabe7"
                            text="RB Consumed"
                        />
                        <m:Input
                            id="_IDGenInput6"
                            value="{formModel>/RBConsumed}"
                            type="Number"
                            change="RBQtyChange"
                        />

                        <!-- Right Column -->
                        <core:Title
                            id="_IDGenTitle1"
                            text=""
                        />
                        <!-- Setup Time -->
                        <m:Label
                            id="_IDGenLabel"
                            text="Setup"
                        />
                        <m:HBox id="_IDGenHBox1">
                            <m:Input
                                id="_IDGenInput"
                                width="150px"
                                value="{formModel>/SetupTime}"
                                type="Number"
                            />
                            <m:Text
                                id="_IDGenText"
                                text="HR"
                                class="sapUiSmallMarginBegin sapUiSmallMarginEnd"
                            />
                        </m:HBox>

                        <!-- Machine Time -->
                        <m:Label
                            id="_IDGenLabel1"
                            text="Machine"
                        />
                        <m:HBox id="_IDGenHBox2">
                            <m:Input
                                id="_IDGenInput3"
                                width="150px"
                                value="{formModel>/MachineTime}"
                                type="Number"
                            />
                            <m:Text
                                id="_IDGenText3"
                                text="HR"
                                class="sapUiSmallMarginBegin sapUiSmallMarginEnd"
                            />
                        </m:HBox>

                        <!-- Labor Time -->
                        <m:Label
                            id="_IDGenLabel4"
                            text="Labor"
                        />
                        <m:HBox id="_IDGenHBox3">
                            <m:Input
                                id="_IDGenInput7"
                                width="150px"
                                value="{formModel>/LaborTime}"
                                type="Number"
                            />
                            <m:Text
                                id="_IDGenText6"
                                text="HR"
                                class="sapUiSmallMarginBegin sapUiSmallMarginEnd"
                            />
                        </m:HBox>
                    </f:content>
                </f:SimpleForm>
            </m:content>
        </m:Panel>

        <m:Panel
            id="_IDGenPanel4"
            class="sapUiResponsiveMargin"
            width="auto"
            expandable="false"
            expanded="true"
        >
            <m:headerToolbar>
                <m:Toolbar id="_IDGenToolbar1">
                    <m:Title
                        id="_IDGenTitle"
                        text="Goods Movements Overview"
                    />
                    <m:ToolbarSpacer id="_IDGenToolbarSpacer2" />
                    <m:Button
                        id="_IDGenButtonGenerate"
                        text="Generate"
                        type="Ghost"
                        press="onGenerate"
                    />
                </m:Toolbar>
            </m:headerToolbar>

            <m:content>
                <t:Table
                    id="goodsMovementTable"
                    rows="{formModel>/_GoodsMovements}"
                    selectionMode="MultiToggle"
                    visibleRowCount="10"
                >
                    <t:columns>
                        <t:Column id="_IDGenColumn">
                            <t:label>
                                <m:Label
                                    id="_IDGenLabel27"
                                    text="Material"
                                />
                            </t:label>
                            <t:template>
                                <m:Text
                                    id="_IDGenText1"
                                    text="{formModel>Material}"
                                />
                            </t:template>
                        </t:Column>
                        <t:Column id="_IDGenColumn3" width="20rem">
                            <t:label>
                                <m:Label
                                    id="_IDGenLabel7"
                                    text="Material Description"
                                />
                            </t:label>
                            <t:template>
                                <m:Text
                                    id="_IDGenText11"
                                    text="{formModel>Description}"
                                />
                            </t:template>
                        </t:Column>

                        <t:Column id="_IDGenColumn4">
                            <t:label>
                                <m:Label
                                    id="_IDGenLabel31"
                                    text="Plant"
                                />
                            </t:label>
                            <t:template>
                                <m:Text
                                    id="_IDGenText4"
                                    text="{formModel>Plant}"
                                />
                            </t:template>
                        </t:Column>

                        <t:Column id="_IDGenColumn5">
                            <t:label>
                                <m:Label
                                    id="_IDGenLabel32"
                                    text="Location"
                                />
                            </t:label>
                            <t:template>
                                <m:Text
                                    id="_IDGenText5"
                                    text="{formModel>StorageLocation}"
                                />
                            </t:template>
                        </t:Column>

                        <t:Column id="_IDGenColumn6">
                            <t:label>
                                <m:Label
                                    id="_IDGenLabel8"
                                    text="Batch"
                                />
                            </t:label>
                            <t:template>
                                <m:Input
                                    id="_IDGenInput9"
                                    value="{formModel>Batch}"
                                    showValueHelp="true"
                                    valueHelpRequest=".onBatch"
                                />
                            </t:template>
                        </t:Column>

                        <t:Column id="_IDGenColumn8">
                            <t:label>
                                <m:Label
                                    id="_IDGenLabel35"
                                    text="Movement Type"
                                />
                            </t:label>
                            <t:template>
                                <m:Text
                                    id="_IDGenText8"
                                    text="{formModel>GoodsMovementType}"
                                />
                            </t:template>
                        </t:Column>

                        <t:Column id="_IDGenColumn1">
                            <t:label>
                                <m:Label
                                    id="_IDGenLabel28"
                                    text="Quantity"
                                />
                            </t:label>
                            <t:template>
                                <m:Input
                                    id="_IDGenInput29"
                                    value="{formModel>Quantity}"
                                    editable="false"
                                />
                            </t:template>
                        </t:Column>

                        <t:Column id="_IDGenColumn2">
                            <t:label>
                                <m:Label
                                    id="_IDGenLabel29"
                                    text="Unit"
                                />
                            </t:label>
                            <t:template>
                                <m:Text
                                    id="_IDGenText2"
                                    text="{formModel>Unit}"
                                />
                            </t:template>
                        </t:Column>
                    </t:columns>
                </t:Table>
            </m:content>
        </m:Panel>

        <m:footer>
            <m:OverflowToolbar id="_IDGenOverflowToolbar">
                <m:ToolbarSpacer id="_IDGenToolbarSpacer1" />
                <m:Button
                    id="_IDGenButton"
                    type="Emphasized"
                    text="Post"
                    press="onClickPost"
                />

                <m:Button
                    id="_IDGenButton2"
                    type="Default"
                    text="Cancel"
                    press="cancel"
                />
            </m:OverflowToolbar>
        </m:footer>
    </m:Page>
</mvc:View>
